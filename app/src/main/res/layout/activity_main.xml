<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/hello" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"

            android:text="Добро пожаловать!"
            android:textAppearance="@style/some_id4"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_marginLeft="1dp"
        android:layout_marginVertical="15dp"
        android:layout_width="296dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:text="Войдите, чтобы пользоваться функциями приложения"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:text="Вход по E-mail"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
         />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
android:hint="example@mail.ru"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textEmailAddress" />
    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:backgroundTint="@color/blue"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Далее"
    />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="125dp"
        android:text="Или войдите с помощью"

        app:layout_constraintVertical_bias="0.824" />
    <Button
        android:id="@+id/button2"
        android:layout_width="341dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/empty"
        android:text="Войти с Яндекс"
        />
</LinearLayout>